<ul id="slides">
  <% @users.each_with_index do |user, index| %>
    <div class="slide" data-id="<%= user.id %>">
      <li><%= user.first_name %></li>
    </div>
  <% end %>
</ul>

<div id="slide-controls">
  <span class="controls" id="decline"><i class="fa fa-times-circle fa-2x"></i> Deny</span>
  <span class="controls" id="approve"><i class="fa fa-heart fa-2x"></i> Approve</span>
</div>
